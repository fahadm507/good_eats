<%= form_for @restaurant do |f|%>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :address %>
  <%= f.text_field :address %>

  <%= f.label :city%>
  <%= f.text_field :city %>

  <%= f.label :zip_code, "zip code"%>
  <%= f.text_field :zip_code %>

  <%= f.label :category %>
  <%= f.text_field :category %>

  <%= f.label :description %>
  <%= f.text_area :description %><br>

  <%= f.submit "Submit", :class => "btn" %>

<%end%>

